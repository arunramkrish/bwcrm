<% if(p_proj.length !== 0) { %>

<center><h3><b style="color:red">CUSTOMER PROJECT DETAILS OF <%=p_proj[0].custname %></b></h3></center>

<br>
<center><h4><b style="color:blue">PROJECT DETAILS</b></h4></center>

<table style="width : 90%;" class="bor">
	<thead>
		<tr>
			<th style="padding:10px;"><center>Project Name</center></th>
			<th><center>Project Type</center></th>			
			<th><center>Description</center></th>
			<th><center>Start Date</center></th>
			<th><center>End Date</center></th>
			<th><center>Address</center></th>
			<th><center>Building Stage</center></th>
		</tr>
	</thead>
	<tbody>
		<% for(var i = 0 ; i < p_proj.length ; i++){ %>
